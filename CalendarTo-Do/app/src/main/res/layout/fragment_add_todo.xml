<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/addTodoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add A Todo"
        android:textAlignment="center"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/todoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Todo Title"
        android:layout_below="@id/addTodoTitle"/>

    <EditText
        android:id="@+id/todoFor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/todoTitle"
        android:hint="Who is this Todo for?"/>

    <Button
        android:id="@+id/recordTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/todoFor"
        android:text="Add Todo!"/>

    <Button
        android:id="@+id/updateTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/todoFor"
        android:text="Update Todo!"/>

    <Button
        android:id="@+id/deleteTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/updateTodo"
        android:layout_below="@id/todoFor"
        android:layout_marginLeft="10dp"
        android:text="Delete this todo"/>

</RelativeLayout>